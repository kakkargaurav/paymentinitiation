{
  "info": {
    "name": "Australian Bank Payment Initiation API",
    "description": "BIAN-compliant payment initiation API for Australian banking systems supporting NPP, BECS, BPAY, Direct Debit, and Wire Transfers",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3232",
      "type": "string"
    },
    {
      "key": "apiBasePath",
      "value": "/payment-initiation",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health & Service Info",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Correlation-ID",
                "value": "health-{{$randomUUID}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          },
          "response": []
        },
        {
          "name": "Root Endpoint",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Correlation-ID",
                "value": "root-{{$randomUUID}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            }
          },
          "response": []
        },
        {
          "name": "Service Information",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Correlation-ID",
                "value": "service-{{$randomUUID}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}{{apiBasePath}}/service-info",
              "host": ["{{baseUrl}}"],
              "path": ["payment-initiation", "service-info"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "NPP Payments",
