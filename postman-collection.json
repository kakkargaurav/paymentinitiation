  "auth": {
    "type": "noauth"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Add X-API-Version header to all requests",
          "pm.request.headers.add({",
          "    key: 'X-API-Version',",
          "    value: 'v1'",
          "});"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global test script for all requests",
          "pm.test('Response has X-Correlation-ID header', function () {",
          "    pm.expect(pm.response.headers.get('X-Correlation-ID')).to.not.be.undefined;",
          "});",
          "",
          "pm.test('Response has X-API-Version header', function () {",
          "    pm.expect(pm.response.headers.get('X-API-Version')).to.not.be.undefined;",
          "});",
          "",
          "pm.test('Response time is acceptable', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "// Set variables from successful payment responses",
          "if (pm.response.code === 201 && pm.response.json().data && pm.response.json().data.paymentInstructionReference) {",
          "    pm.collectionVariables.set('lastPaymentReference', pm.response.json().data.paymentInstructionReference);",
          "}"
        ]
      }
    }
  ]
}