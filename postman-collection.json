            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentInstructionType\": \"NPP_INSTANT\",\n  \"paymentInstructionAmount\": {\n    \"amount\": \"100.00\",\n    \"currency\": \"AUD\"\n  },\n  \"paymentMechanism\": \"NPP\",\n  \"debitAccount\": {\n    \"accountIdentification\": \"123456789\",\n    \"bankCode\": \"123-456\",\n    \"accountName\": \"John Doe\"\n  },\n  \"creditAccount\": {\n    \"accountIdentification\": \"987654321\",\n    \"bankCode\": \"654-321\",\n    \"accountName\": \"Jane Smith\"\n  },\n  \"remittanceInformation\": \"Payment for services\",\n  \"nppData\": {\n    \"paymentCategory\": \"INSTANT_PAYMENT\",\n    \"urgency\": \"NORMAL\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}{{apiBasePath}}/npp-payments/initiate",
              "host": ["{{baseUrl}}"],
              "path": ["payment-initiation", "npp-payments", "initiate"]
            }
          },
          "response": []
        },
